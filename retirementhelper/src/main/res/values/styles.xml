<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--
        <item name="android:textColorPrimary">@color/toolbarTextColor</item>
        <item name="android:textColorSecondary">@color/toolbarTextColor</item>
        -->
    </style>

    <!-- Dialog Theme -->
    <style name="RetireDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="background">@drawable/dialog_bg</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThreeDigitPositiveNumber">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
        <item name="android:minEms">2</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TwoDigitPositiveNumber" parent="ThreeDigitPositiveNumber">
        <item name="android:maxLength">2</item>
    </style>

    <style name="FourDigitPositiveNumber" parent="ThreeDigitPositiveNumber">
        <item name="android:maxLength">4</item>
    </style>

    <style name="FiveDigitPositiveNumber" parent="ThreeDigitPositiveNumber">
        <item name="android:maxLength">5</item>
        <item name="android:minEms">4</item>
    </style>

</resources>
