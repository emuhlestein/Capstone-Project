<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_new_user"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.intelliviz.retirementhelper.ui.NewUserActivity">

    <TextView
        android:text="@string/resgistration_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/name_text_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/name_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/name_edit_view" />

    <TextView
        android:text="@string/registration_birthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_edit_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/birthdate_text_view" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birthdate_text_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="18dp"
        android:id="@+id/spinner" />

    <TextView
        android:text="@string/registration_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="19dp"
        android:id="@+id/email_text_View" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/email_text_View"
        android:layout_alignStart="@+id/email_text_View"
        android:layout_marginTop="30dp"
        android:id="@+id/email_edit_view" />

    <TextView
        android:text="@string/registration_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_edit_view"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/password_text_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/password_text_view"
        android:layout_alignEnd="@+id/password_text_view"
        android:layout_marginTop="23dp"
        android:id="@+id/password_edit_view" />

    <TextView
        android:text="@string/registration_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_edit_view"
        android:layout_alignStart="@+id/password_edit_view"
        android:layout_marginTop="14dp"
        android:id="@+id/password2_text_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/password2_text_view"
        android:id="@+id/password2_edit_view" />
</RelativeLayout>
