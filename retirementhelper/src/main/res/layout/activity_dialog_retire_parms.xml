<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="@string/retirement_options"
        android:textSize="22sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/separator" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_end_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/end_age_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="@string/end_age"
            android:inputType="numberDecimal"
            style="@style/ThreeDigitPositiveNumber"/>
    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/withdraw_mode_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/withdraw_percent_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_percentage"
            android:textSize="22sp"
            android:contentDescription="@string/withdraw_percentage"/>

        <RadioButton
            android:id="@+id/withdraw_amount_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/withdraw_amount"
            android:textSize="22sp"
            android:contentDescription="@string/withdraw_amount"/>

    </RadioGroup>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_withdraw_percent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/withdraw_percent_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="@string/percentage"
            android:inputType="numberDecimal"
            style="@style/ThreeDigitPositiveNumber"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_withdraw_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp">

        <EditText
            android:id="@+id/withdraw_amount_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="@string/amount"
            android:inputType="numberDecimal"
            style="@style/ThreeDigitPositiveNumber"/>
    </android.support.design.widget.TextInputLayout>


    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/retirement_parms_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:contentDescription="@string/cancel"/>

        <Button
            android:id="@+id/retirement_parms_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"
            android:contentDescription="@string/ok"/>
    </LinearLayout>

</LinearLayout>