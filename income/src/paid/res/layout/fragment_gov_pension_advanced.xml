<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.intelliviz.retirementhelper.ui.GovPensionAdvancedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/edit_start_age_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:contentDescription="@string/edit_age_desc"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:text="@string/edit_age" />

        <TextView
            android:id="@+id/start_age_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:textSize="18sp"/>

    </LinearLayout>


</FrameLayout>
